<mvc:View controllerName="com.ui5.trng.sapui5bootcampordermanagement.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"

    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar">
    <f:DynamicPage id="pageMain">
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar id="ordersFilterBar" 
                        persistencyKey="myPersKey" 
                        useToolbar="false" 
                        search="onFilterSearch" 
                        clear="onFilterClear"
                        showClearOnFB="true"
                        showFilterConfiguration="false">
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem name="OrderNumber" label="{i18n>order.number}" groupName="Group1" visibleInFilterBar="true">
                                <fb:control>
                                    <Input id="inpOrderNumber" placeholder="{i18n>order.number}"/>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem name="CreationDate" label="{i18n>order.creationDate}" groupName="Group1" visibleInFilterBar="true">
                                <fb:control>
                                    <DateRangeSelection id="dateRangeCreationDate" 
                                        placeholder="{i18n>order.creationDate}"
                                        displayFormat="yyyy-MM-dd"
                                        valueFormat="yyyy-MM-dd"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem name="Status" label="{i18n>order.status}" groupName="Group1" visibleInFilterBar="true">
                                <fb:control>
                                    <MultiComboBox
                                        id="multiSelectStatus"
                                        name="MultiSelectStatus"
                                        items="{
                                            path: 'statusModel>/statusOptions'
                                        }"
                                    >
                                        <core:Item key="{statusModel>key}" text="{statusModel>text}"/>
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="ordersTable"
                inset="false"
                items="{
                    path: '/Orders',
                    sorter: {
                        path: 'OrderNum'
                    }
                }"
                mode="MultiSelect"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title text="{i18n>order.tableTitle}" level="H2"/>
                            <ToolbarSpacer />
                            <Button
                                tooltip="{i18n>button.create}"
                                icon="sap-icon://add"
                                press="_onBtnPressOrderCreate"/>
                            <Button
                                tooltip="{i18n>button.delete}"
                                icon="sap-icon://delete"
                                press="_onBtnPressOrderDelete"/>
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>column.orderNumber}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>column.creationDate}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>column.receivingPlant}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>column.deliveringPlant}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>column.status}"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem vAlign="Middle"
                        type="Navigation"   
                        press="onListItemPress">
                        <cells>
                            <ObjectIdentifier title="{OrderNum}"/>
                            <Text text="{
                                path: 'CreateDat',
                                formatter: '.formatter.formatDate'
                            }" />
                            <Text text="{RecPlantID} - {RecPlantDesc}" />
                            <Text text="{DelPlantID} - {DelPlantDesc}" />
                            <ObjectStatus 
                                text="{Status}"
                                state="{path: 'Status', formatter: '.formatter.statusColor'}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>